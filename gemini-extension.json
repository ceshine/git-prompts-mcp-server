{
  "name": "git-prompts-helpers",
  "version": "0.3.1",
  "mcpServers": {
    "git-prompts-mcp-server": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/ceshine/git-prompts-mcp-server.git",
        "git-prompts-mcp-server",
        "${workspacePath}",
        "--excludes",
        "**/*.lock",
        "--format",
        "json"
      ]
    }
  }
}
